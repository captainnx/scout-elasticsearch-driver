{
    "name": "captainnx/scout-elasticsearch-driver",
    "type": "library",
    "description": "The Elasticsearch Driver for Laravel Scout",
    "keywords": [
        "elastic",
        "elasticsearch",
        "driver",
        "engine",
        "laravel",
        "scout",
        "search"
    ],
    "homepage": "https://github.com/captainnx/scout-elasticsearch-driver",
    "license": "MIT",
    "authors": [
        {
            "name": "captainnx",
            "email": "vipiscaptain@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "elasticsearch/elasticsearch": "6.*",
        "laravel/scout": "4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*",
        "mockery/mockery": "1.*"
    },
    "autoload": {
        "psr-4": {
            "ScoutElastic\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ScoutElastic\\ScoutElasticServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit -c phpunit.xml"
    }
}
